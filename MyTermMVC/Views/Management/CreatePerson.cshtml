
@{
    ViewBag.Title = "CreatePerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreatePerson</h2>

<div ng-app="app" ng-controller="PersonController as vm">
    <div class="row">
        <div class="form-group">
            <label for="town">Town</label>
            <input type="text" ng-model="vm.person.Town" class="form-control" />
        </div>

        <div class="form-group">
            <label for="minicipality">Minicipality</label>
            <input type="text" ng-model="vm.person.Minicipality" class="form-control" />
        </div>
        <div class="form-group">
            <label for="areacode">Area code</label>
            <input type="text" ng-model="vm.person.AreaCode" class="form-control" />
        </div>
        <div class="form-group">
            <label for="phonenumber">Phone number</label>
            <input type="text" ng-model="vm.person.PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" ng-model="vm.person.Country" class="form-control" />
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" ng-model="vm.person.Address" class="form-control" />
        </div>
        <div class="form-group">
            <label for="fristname">First name</label>
            <input type="text" ng-model="vm.person.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="lastname">Last name</label>
            <input type="text" ng-model="vm.person.LastName" class="form-control" />
        </div>

        <div class="form-group">
            <button class="btn btn-sm btn-primary" ng-click="vm.insertPerson()">
                <i class="glyphicon glyphicon-share-alt"></i>
                &nbsp; Create person
            </button>
        </div>
    </div>
</div>


<script src="~/app/person.controller.js"></script>