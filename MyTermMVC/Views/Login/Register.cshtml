@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Registry</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/app/app.module.js"></script>
    <script src="~/app/user.controller.js"></script>

</head>

<body class="gray-bg" ng-app="app" ng-controller="UserController as vm">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name text-center">{{vm.LogoName}}</h1>
            </div>
            <p>Register on MyTerm</p>
                        
            @*<form class="m-t" role="form">*@
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="vm.user.Username" placeholder="UserName">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="vm.user.FirstName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="vm.user.LastName" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" ng-model="vm.user.Email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" ng-model="vm.user.PasswordHash" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" ng-model="vm.user.ConfirmPassword" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" ng-model="vm.user.PhoneNumber" placeholder="Phone Number">
                </div>
                @*<div class="form-group">
                    <div class="checkbox"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>*@
                <button type="button" class="btn btn-primary block full-width m-b" ng-click="vm.register()">Register</button>                

                @*<p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Login", "Login")">Login</a>*@
            @*</form>*@
            <p class="m-t"> <small>MyTerm &copy; 2016</small> </p>
        </div>
    </div>
</body>

</html>