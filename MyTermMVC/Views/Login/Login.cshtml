@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    
    <div class="middle-box text-center loginscreen  animated fadeInDown" ng-app="app" ng-controller="UserController as vm">
        <div>
            <h1 class="logo-name">MyTerm</h1>
        </div>
        <h3>Welcome to MyTerm</h3>
        <p>
            It's time to take control over your time management
        </p>
       
            <div class="form-group">
                <input type="email" class="form-control" ng-model="vm.user.Username" placeholder="Username" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" ng-model="vm.user.PasswordHash" placeholder="Password" required="">
            </div>

            <button type="button" ng-click="vm.login()" class="btn btn-primary block full-width m-b">Login</button>

            <a href="#"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Login")">Create an account</a>
       
        <p class="m-t"> <small>MyTerm &copy; 2016</small> </p>
    </div>
</body>
</html>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/app.module.js"></script>
<script src="~/app/user.controller.js"></script>